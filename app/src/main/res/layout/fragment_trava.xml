<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufba.engc50.bluelock.view.fragment.TravaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:id="@+id/textViewTrancaStatus"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <ImageButton
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_button_lock"
            android:id="@+id/imageButtonFechar"
            android:layout_weight="0.28"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:layout_width="180dp"
            android:elevation="10dp"
            android:background="@drawable/bigbutton_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="-10"
            android:shadowDy="10"
            android:shadowRadius="5"
            style="@android:style/Widget.ImageButton" />

        <ImageButton
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_button_unlock"
            android:id="@+id/imageButtonAbrir"
            android:layout_weight="0.28"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:layout_width="180dp"
            android:elevation="10dp"
            android:background="@drawable/bigbutton_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="-1"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@android:style/Widget.ImageButton" />

    </LinearLayout>

</FrameLayout>
